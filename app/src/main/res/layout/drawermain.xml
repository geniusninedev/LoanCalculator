<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appcolor"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#ffffff">


        <FrameLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="#ffffff">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/layoutWarning"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewWarning"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="17dp"
                            android:layout_marginLeft="5dp"
                            android:text="Provide Values for Calculation"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewInterestType"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Interest Type"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"

                            >

                            <Spinner
                                android:id="@+id/spinnerInterestType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:drawable/editbox_background"
                                />
                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center_vertical|right"
                                android:background="@drawable/drop_down1"
                                android:layout_marginRight="4dp"
                                android:contentDescription="@string/app_name" />
                        </FrameLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewAmount"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Loan Amount"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/editTextLoanAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/editbox_background"
                            android:digits="0123456789."
                            android:ems="10"
                            android:filterTouchesWhenObscured="true"
                            android:inputType="numberDecimal" />

                        <Button
                            android:text="Calc value"
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonLoanCalcvalue"
                            android:layout_weight="1"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:background="@android:drawable/editbox_background_normal"
                            android:textColor="@color/cardview_light_background"
                            android:backgroundTint="@color/btn_color"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:text="Months"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView1loanmonths"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:maxLength="3"
                            android:digits="0123456789"
                            android:id="@+id/editTextloanmonths"
                            android:background="@android:drawable/editbox_background"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewInterest"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Interest Rate"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:maxLength="5"
                            android:digits="0123456789."
                            android:id="@+id/editTextLoanInterestRate"
                            android:background="@android:drawable/editbox_background"
                            android:layout_weight="1" />


                        <TextView
                            android:text="% per year"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewInterestper"
                            android:textColor="@color/main_text_color"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/layoutCmpoundsperyear">

                        <TextView
                            android:text="Compounds"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewcompounding"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold"/>


                        <EditText
                            android:id="@+id/editTextCompounds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/editbox_background"
                            android:digits="0123456789"
                            android:ems="10"
                            android:maxLength="2"
                            android:filterTouchesWhenObscured="true"
                            android:inputType="number" />
                        <TextView
                            android:text=" per year"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewInterestper1"
                            android:textColor="@color/main_text_color"
                            android:textSize="15dp"

                            android:textStyle="bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/advancedlayout"
                        android:visibility="gone"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Property Tax"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewPropertyTax"
                                android:textStyle="bold"/>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:digits="0123456789."
                                android:ems="10"
                                android:id="@+id/editTextPropertyTax"
                                android:layout_weight="1" />

                            <TextView
                                android:text="per year"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView1PropertyTaxyear"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Insurance"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewInsurance"
                                android:textStyle="bold"/>


                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:digits="0123456789."
                                android:id="@+id/editTextInsurance"
                                android:layout_weight="1" />
                            <TextView
                                android:text="per year"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView1Insuranceyear"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="PMI"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewPMI"
                                android:textStyle="bold"/>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:digits="0123456789."
                                android:id="@+id/editTextPMI"
                                android:layout_weight="1" />
                            <TextView
                                android:text="per year"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewPMIyear"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Property Price"
                                android:layout_width="106dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewPropertyprice"
                                android:textStyle="bold"/>


                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:ems="10"
                                android:digits="0123456789."
                                android:id="@+id/editTextPropertyprice"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adViewLoanCalculator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="@string/banner_ad_unit_id">

                    </com.google.android.gms.ads.AdView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <Button
                            android:id="@+id/buttonLoanReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/btn_color"
                            android:textStyle="bold"
                            android:text="RESET"
                            android:background="@android:drawable/editbox_background_normal"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="14dp" />

                        <Button
                            android:text="CALCULATE"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonLoanCalculate"
                            android:textSize="14dp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:textColor="@color/cardview_light_background"
                            android:backgroundTint="@color/btn_color"
                            android:textStyle="bold"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:id="@+id/layoutResult"
                        android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layoutDisplayResult"
                        android:layout_gravity="center"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            >

                            <TextView
                                android:text="Monthly Payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_text_color"
                                android:id="@+id/textViewMonthlyPayment"
                                android:layout_marginLeft="35dp"
                                android:textSize="15dp"
                                android:layout_weight="1"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewMonthlyPaymentAmount"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:textSize="15dp"
                                    android:gravity="right"
                                    android:textColor="@color/colorAccent" />
                                <TextView
                                    android:text=" INR"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterestperINRM"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:text="Total Payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewTotalPayment"
                                android:textColor="@color/main_text_color"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_marginLeft="35dp"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewTotalPaymentAmount"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorAccent" />
                                <TextView
                                    android:text=" INR"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterestperINRT"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:text="Total Interest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewTotalInterest"
                                android:textColor="@color/main_text_color"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_marginLeft="35dp"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewTotalInterestAmount"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textColor="@color/colorAccent" />
                                <TextView
                                    android:text=" INR"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterestperINR1"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Annual Payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewAnnualPayment"
                                android:textColor="@color/main_text_color"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_marginLeft="35dp"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/textViewAnnualPaymentAmount"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorAccent" />
                                <TextView
                                    android:text=" INR"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterestperINRA2"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Mortgage Constant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewmortgage"
                                android:textColor="@color/main_text_color"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_marginLeft="35dp"
                                android:textStyle="bold"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/textViewmortgageConstant"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorAccent" />
                                <TextView
                                    android:text=" %"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterestperINRm"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/layoutcompoundresult"
                            android:visibility="gone"
                            android:layout_marginTop="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Total Principal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/textViewTotalPrincipal"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="35dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/main_text_color"
                                    android:layout_weight="1"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/textViewTotalPrincipalAmount"
                                        android:textStyle="bold"
                                        android:textSize="15dp"
                                        android:gravity="right"
                                        android:textColor="@color/colorAccent" />
                                    <TextView
                                        android:text=" INR"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textViewInterestperINRp"
                                        android:textColor="@color/main_text_color"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:text="Interest"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewInterest1"
                                    android:layout_marginLeft="35dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/textViewInterestAmount"
                                        android:textStyle="bold"
                                        android:textSize="15dp"
                                        android:gravity="right"
                                        android:textColor="@color/colorAccent"
                                        />
                                    <TextView
                                        android:text=" INR"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textViewInterestperINRI"
                                        android:textColor="@color/main_text_color"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="3dp">

                                <TextView
                                    android:text="Compound Interest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewMaturityValue"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="35dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/main_text_color"
                                    android:layout_weight="1"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <TextView
